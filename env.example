# Database Configuration
# Supported types: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite

# SQLite Configuration (when DATABASE_TYPE=sqlite)
SQLITE_PATH=/app/data/expenses.db

# PostgreSQL Configuration (when DATABASE_TYPE=postgresql)
# DATABASE_HOST=postgres
# DATABASE_PORT=5432
# DATABASE_NAME=expenses
# DATABASE_USER=postgres
# DATABASE_PASSWORD=postgres

# MySQL Configuration (when DATABASE_TYPE=mysql)
# DATABASE_HOST=mysql
# DATABASE_PORT=3306
# DATABASE_NAME=expenses
# DATABASE_USER=expenses_user
# DATABASE_PASSWORD=expenses_pass

# Flask Configuration
FLASK_ENV=development

# Network binding
# Use 0.0.0.0 to listen on all interfaces (required for Docker),
# or 127.0.0.1 to restrict to localhost only (safer for local dev).
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000
