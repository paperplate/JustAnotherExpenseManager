[flake8]
max-line-length = 100
exclude =
    venv,
    env,
    .venv,
    migrations,
    __pycache__,
    .git,
    build,
    dist,
    .eggs,
    *.egg-info
ignore =
    E203,  # whitespace before ':'
    E266,  # too many leading '#' for block comment
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
