[flake8]
max-line-length = 120
exclude =
    venv,
    env,
    .venv,
    migrations,
    __pycache__,
    .git,
    build,
    dist,
    .eggs,
    *.egg-info
ignore =
    # whitespace before ':'
    E203,
    # too many leading '#' for block comment
    E266,
    # line too long (handled by black)
    E501,
    # line break before binary operator
    W503,
max-complexity = 10
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
